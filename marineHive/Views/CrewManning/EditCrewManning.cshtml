@model App.DAL.Models.TblCrewManning

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



<div class="box-content">
    <div class="box-heading">
        <div class="box-title">
            <h3 class="mb-35">Update Crew Manning Content</h3>
        </div>
       @* <div class="box-breadcrumb">
            <a class="btn btn-dark" asp-controller="Gallery" asp-action="GalleryPhotoIndex">Back to List</a>
        </div>*@
    </div>
    <div class="row">
        <div class="form-control">
            <div class="box-padding">
            <form asp-action="EditGalleryPhoto" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CrewManningId" />
                <input type="hidden" asp-for="Image" />
               
                <img src="@Model.Image" height="150" width="300" />
                <div class="form-group">
                    <label class="control-label">Change Image</label>
                    <input id="PhotoUpload" name="PhotoUpload" data-member="PhotoUpload" asp-for="PhotoUpload" class="form-control" />
                    <span asp-validation-for="PhotoUpload" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Details" class="control-label"></label>
                    @*<input asp-for="Details" class="form-control" />*@
                    <textarea asp-for="Details" class="form-control" rows="5" maxlength="500"></textarea>
                        <small class="text-muted">------Max 500 character---</small>

                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-secondary" />
                </div>

            </form>

        </div>
        </div>
    </div>
</div>



